.name-desc {

  margin-bottom: 10rpx;
}

.info-name {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  line-height: 42rpx;
}

.info-desc {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
  line-height: 30rpx;
}

.reser-time {
  margin-top: 10rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
}

.info-bottom {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 33rpx;
  margin-top: 10rpx;
}

.info-hospital {
  margin-right: 30rpx;
}

.info-bottom .icon {
  display: inline-block;
  height: 13rpx;
  width: 13rpx;
  border-radius: 50%;
  margin-right: 4rpx;
  margin-bottom: 5rpx;
}

.icon-hospital {
  background-color: rgb(159, 231, 80);
}

.icon-team {
  background-color: rgba(123, 201, 219, 0.356);
}

.assess-body {
  background-color: #fff;
  padding: 25rpx 0;
  margin-top: 20rpx;
}

.assess-title {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(74, 74, 74, 1);
  text-align: center;
}

.assess-star {
  margin-top: 20rpx;
}

.star-wrap {
  width: 50vw;
  margin: 10rpx auto 10rpx auto;
}

.star-item {
  display: inline-block;
  height: 60rpx;
  width: 60rpx;
  margin-right: 10rpx;
}

.star-desc {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgb(243, 146, 0);
  text-align: center;
}

.assess-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 75vw;
  margin: 5rpx auto 30rpx auto;
}

.item-assess {
  height: 50rpx;
  line-height: 50rpx;
  width: 32vw;
  border: 1px solid #eee;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(74, 74, 74, 1);
  margin-top: 25rpx;
  border-radius: 5rpx;
}

.is_checked{
  border: 1px solid rgb(102, 193, 140);
  color: rgb(102, 193, 140);
  background: #fff;
}
.normal{
  /* border: none;
  color: rgba(74, 74, 74, 1); */
  /* background: #F0F1EC; */
}

textarea {
  width: 75vw;
  margin: 0 auto;
  border: 1px solid #eee;
  border-radius: 5rpx;
  padding: 15rpx;
  height: 200rpx;
}

.place-assess {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
}

.assess-submint {
  margin: 20rpx auto 0 auto;
  width: 90vw;
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  background-color: rgb(102, 193, 140);
  font-size: 36rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
}
