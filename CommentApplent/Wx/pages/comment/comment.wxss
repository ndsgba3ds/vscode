.assess-pages {
  padding: 10rpx 0;
  background-color: rgb(250, 250, 250);
  min-height: 100vh;
  box-sizing: border-box;
}

.wrapper-item {
  height: 220rpx;
  width: 100%;
  border-radius: 8rpx;
  padding: 20rpx 35rpx;
  background-color: #fff;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  text-align: center
}

.title-img {
  
}

.wrapper-item image {
  height: 136rpx;
  width: 136rpx;
  border-radius: 50%;
}

